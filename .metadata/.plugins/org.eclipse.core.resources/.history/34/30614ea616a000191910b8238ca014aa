import java.util.Arrays;
import java.util.Random;
public class Main {

	public static void main(String[] args) {
		//1.
		int n = 12;
		int[] name = new int[10];
		int sum = 0;
		int a = 0, b = 0, c = 0, d = 0, e = 0;
		int evenSum = 0, oddSum = 0;
		for(int i = 0; i < name.length; i++){
			name[i] = (int) (Math.random() * 5) +1;
		}
		String intAString = Arrays.toString(name);
	    System.out.println(intAString);
		//2.
		for(int i = 0; i < name.length; i++){
			sum = sum + name[i];
		}
		System.out.println("Сумма чисел массива равна " + sum);
		//3, 4.
		for(int i = 0; i < name.length; i++){
			if(name[i] == 3) c++;
			if(name[i] == 1) a++;
			if(name[i] == 2) b++;
			if(name[i] == 4) d++;
			if(name[i] == 5) e++;
		}
		System.out.println("Число 3 попалось в массиве " + c + " раз");
		System.out.println("Число 1 попалось в массиве " + a + " раз");
		System.out.println("Число 2 попалось в массиве " + b + " раз");
		System.out.println("Число 4 попалось в массиве " + d + " раз");
		System.out.println("Число 5 попалось в массиве " + e + " раз");
		//5.
		char[] chars = new char[n]; 
        for (int i = 0; i < n; i++)
            chars[i] = (char)('A' + i);
        Random r = new Random();                                   
        for (int i = n - 1; i >= 1; i--) {
            int j = r.nextInt(i + 1);
            char temp = chars[j];
            chars[j] = chars[i];
            chars[i] = temp;
            System.out.print(" " + temp);
        }
        //6.
        for (int i = 0; i < name.length; i++){
        	if(name[i] % 2 == 0)
        		evenSum += name[i];
        	else 
        		oddSum += name[i];
        }
        System.out.println();
        System.out.print("Сумма чётных чисел равна " + evenSum);
    	System.out.print("Сумма нечётных чисел равна " + oddSum);
	}
}